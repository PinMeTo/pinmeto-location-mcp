{
  "name": "@pinmeto/pinmeto-location-mcp",
  "version": "3.2.1",
  "description": "PinMeTo Location MCP",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && node manifest.js && tsc && cp package.json build/ && node update-build-version.js",
    "build:test": "VERSION_POSTFIX=test-$(date -u +%Y%m%dT%H%M%SZ) npm run build",
    "pack:test": "npm run build:test && npx @anthropic-ai/mcpb pack",
    "clean": "node -e \"require('fs').rmSync('build', {recursive: true, force: true})\"",
    "prepare": "npm run build",
    "start": "node --env-file=.env.local build/index.js",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "inspector": "npx @modelcontextprotocol/inspector node --env-file=.env.local build/index.js",
    "test": "vitest --run",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "release:prepare": "changeset status --verbose",
    "release:version": "changeset version && node scripts/format-changelog.js && node scripts/update-readme-badges.js",
    "release:draft": "npm test && npm run build && npx @anthropic-ai/mcpb pack && node scripts/create-gh-release.js",
    "release:publish": "gh release edit $(git describe --tags --abbrev=0) --draft=false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PinMeTo/pinmeto-location-mcp"
  },
  "keywords": [
    "mcp"
  ],
  "bin": {
    "pinmeto-location-mcp": "./build/index.js"
  },
  "author": "pinmeto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PinMeTo/pinmeto-location-mcp/issues"
  },
  "homepage": "https://github.com/PinMeTo/pinmeto-location-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.12.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
