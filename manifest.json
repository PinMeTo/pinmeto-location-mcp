{
  "dxt_version": "0.1.0",
  "name": "PinMeTo",
  "display_name": "PinMeTo MCP Server",
  "version": "1.0.0",
  "description": "Connect with your PinMeTo data",
  "long_description": "The PinMeTo MCP Server enables seamless integration between the PinMeTo platform and AI agents such as Claude LLM, allowing users to interact with their location data and business insights through natural language. This server exposes a suite of tools that let you retrieve, analyze, and summarize data from multiple sources—including Google, Facebook, and Apple—covering metrics such as impressions, clicks, ratings, and more.",
  "author": {
    "name": "PinMeTo",
    "url": "https://www.pinmeto.com/"
  },
  "homepage": "https://www.pinmeto.com/",
  "documentation": "https://github.com/PinMeTo/mcp",
  "icon": "src/img/logo_icon.png",
  "server": {
    "type": "node",
    "entry_point": "build/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/build/index.js"],
      "env": {
        "PINMETO_API_URL": "${user_config.PINMETO_API_URL}",
        "PINMETO_ACCOUNT_ID": "${user_config.PINMETO_ACCOUNT_ID}",
        "PINMETO_APP_SECRET": "${user_config.PINMETO_APP_SECRET}",
        "PINMETO_APP_ID": "${user_config.PINMETO_APP_ID}"
      }
    }
  },
  "keywords": ["api", "automation", "productivity"],
  "user_config": {
    "PINMETO_API_URL": {
      "type": "string",
      "title": "PinMeTo API URL",
      "description": "https://api.pinmeto.com",
      "required": true,
      "sensitive": false
    },
    "PINMETO_ACCOUNT_ID": {
      "type": "string",
      "title": "PinMeTo Account ID",
      "description": "Your Account id, example: pinmeto",
      "required": true,
      "sensitive": false
    },
    "PINMETO_APP_ID": {
      "type": "string",
      "title": "PinMeTo App ID",
      "description": "Your App ID, found in account settings",
      "required": true,
      "sensitive": false
    },
    "PINMETO_APP_SECRET": {
      "type": "string",
      "title": "Your App Secret, found in account settings",
      "description": "Your App Secret",
      "required": true,
      "sensitive": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pinmeto/mcp"
  },
  "license": "MIT"
}
